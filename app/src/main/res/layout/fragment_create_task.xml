<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragment.CreateTaskFragment">


    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="212dp"
        android:layout_height="42dp"
        android:layout_marginTop="44dp"
        android:text="Crear nueva tarea"
        android:textSize="24dp"
        android:maxLength="32"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Spinner
        android:id="@+id/spPriority"
        android:layout_width="132dp"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="60dp"
        android:background="@drawable/rounded_background_inputs"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etvDescription" />

    <Spinner
        android:id="@+id/spCategory"
        android:layout_width="123dp"
        android:layout_height="50dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/rounded_background_inputs"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etvDescription" />

    <EditText
        android:id="@+id/etvDescription"
        android:layout_width="283dp"
        android:layout_height="163dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/rounded_background_inputs"
        android:ems="10"
        android:gravity="start|top"
        android:hint="DescripciÃ³n"
        android:inputType="textMultiLine"
        android:maxLength="128"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.531"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etvName" />

    <EditText
        android:id="@+id/etvName"
        android:layout_width="279dp"
        android:layout_height="50dp"
        android:layout_marginTop="76dp"
        android:background="@drawable/rounded_background_inputs"
        android:ems="10"
        android:hint="Nombre"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle" />

    <Button
        android:id="@+id/btnSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="48dp"
        android:text="Guardar"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spPriority"
        app:layout_constraintVertical_bias="0.203" />


</androidx.constraintlayout.widget.ConstraintLayout>